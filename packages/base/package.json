{
  "name": "@rainbowlaces/base",
  "access": "public",
  "version": "3.17.1",
  "description": "An extensible and modular Node.js framework for building scalable web applications with built-in support for routing, middleware, configuration management, and more, designed for simplicity and ease of use.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "base": "./bin/cli.js"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "start": "node ./bin/cli.js start dist/src/index.js",
    "start:dev": "pnpm build && node ./bin/cli.js start -q --dev",
    "lint": "node ./bin/cli.js lint",
    "lint:fix": "pnpm lint --fix",
    "tsc": "node ./bin/cli.js build --types-only",
    "build": "pnpm lint && node ./bin/cli.js build -q",
    "test": "pnpm build --test && node --enable-source-maps --test --test-reporter=dot '_test/test/**/*.js'",
    "test:spec": "pnpm build --test && node --enable-source-maps --test --test-reporter=spec '_test/test/**/*.js'",
    "start:dev:watch": "nodemon --watch src --ext ts,css --exec 'pnpm start:dev'",
    "release": "pnpm lint && node ./bin/cli.js build --release"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/cookie": "^0.6.0",
    "@types/cookie-signature": "^1.1.2",
    "@types/formidable": "^3.4.6",
    "@types/mime-types": "^3.0.1",
    "@types/sanitize-html": "^2.16.0",
    "@types/ws": "^8.18.1",
    "lit": "^3.3.1"
  },
  "peerDependencies": {
    "esbuild": "^0.25.12",
    "eslint": "^9.39.1",
    "nodemon": "^3.1.10",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "cookie": "^1.0.2",
    "cookie-signature": "^1.2.2",
    "dotenv": "^17.2.3",
    "esbuild-plugin-copy": "^2.1.1",
    "formidable": "^3.5.4",
    "glob": "^11.0.3",
    "luxon": "^3.7.2",
    "mime-types": "^3.0.1",
    "nanoid": "^5.1.6",
    "sanitize-html": "^2.17.0",
    "source-map-support": "^0.5.21",
    "typescript-eslint": "^8.46.3",
    "ws": "^8.18.3"
  }
}
{
  "name": "@rainbowlaces/base",
  "access": "public",
  "version": "2.14.8",
  "description": "An extensible and modular Node.js framework for building scalable web applications with built-in support for routing, middleware, configuration management, and more, designed for simplicity and ease of use.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "start": "node dist/testApp/src/index.js",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts' 'testApp/**/*.ts'",
    "tsc": "tsc --noEmit --project tsconfig.json",
    "build:clean": "npm run clean && npm run build",
    "build": "node esbuild.config.js",
    "start:dev": "npm run build && NODE_ENV=development node --inspect -r source-map-support/register dist/testApp/src/index.js 2>&1 | node ./dev/logFormatter.js",
    "start:dev:watch": "nodemon",
    "clean": "rm -rf dist",
    "lint:fix": "npm run lint -- --fix",
    "clean:test": "rm -rf _test.dist",
    "build:test": "node esbuild.test.config.js",
    "test:run": "node --enable-source-maps --test '_test.dist/test/**/*.js'",
    "test": "npm run clean:test && npm run build:test && npm run test:run",
    "full": "npm run lint && npm run tsc && npm run build && npm run test",
    "push": "npm run full && npm publish --access=public",
    "version:patch": "npm version patch && git push --tags",
    "version:minor": "npm version minor && git push --tags",
    "version:major": "npm version major && git push --tags"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.24.8",
    "@eslint/js": "^9.29.0",
    "@types/babel__core": "^7.20.5",
    "@types/cookie": "^1.0.0",
    "@types/cookie-signature": "^1.1.2",
    "@types/formidable": "^3.4.5",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24.0.3",
    "@types/resolve": "^1.20.6",
    "@types/sanitize-html": "^2.11.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.5",
    "esbuild": "^0.25.5",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-file-path-extensions": "^2.1.4",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "glob": "^11.0.3",
    "nodemon": "^3.1.4",
    "prettier": "^3.6.0",
    "source-map-support": "^0.5.21",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0"
  },
  "dependencies": {
    "@babel/core": "^7.24.9",
    "@babel/plugin-proposal-decorators": "^7.24.7",
    "@babel/preset-env": "^7.24.8",
    "@babel/preset-typescript": "^7.24.7",
    "@babel/types": "^7.24.9",
    "@types/parse5": "^6.0.3",
    "cookie": "^1.0.2",
    "cookie-signature": "^1.2.1",
    "formidable": "^3.5.1",
    "lit": "^3.3.0",
    "luxon": "^3.4.4",
    "mime-types": "^3.0.1",
    "nanoid": "^5.0.7",
    "parse5": "^7.3.0",
    "resolve": "^1.22.8",
    "sanitize-html": "^2.13.0"
  }
}
